<?xml version="1.0" encoding="UTF-8"?>
<proxy name="1_1_2_soap_to_json_using_message_type" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <log level="custom">
                <property expression="json-eval('$')" name="JSON_VALUE"/>
            </log>
            <property action="remove" description="Avoid appending resource to endpoint URL" name="REST_URL_POSTFIX" scope="axis2"/>
            <send description="Send Request Payload to SOAP endpoint">
                <endpoint key="EP_JSONEndpoint"/>
            </send>
        </inSequence>
        <outSequence>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
            <respond description="Respond to client"/>
        </outSequence>
        <faultSequence>
            <makefault version="soap11">
                <code expression="get-property('ERROR_CODE')" xmlns:soap11Env="http://schemas.xmlsoap.org/soap/envelope/"/>
                <reason expression="get-property('ERROR_MESSAGE')"/>
            </makefault>
            <header action="remove" name="To" scope="default"/>
            <log level="full">
                <property name="FAULT_HIT" value="Fault sequence hit..."/>
            </log>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
            <respond/>
        </faultSequence>
    </target>
</proxy>
