<?xml version="1.0" encoding="UTF-8"?>
<api context="/1_1_1_API_soap_to_json_using_payload_factory" name="1_1_1_API_soap_to_json_using_payload_factory"
     xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <payloadFactory description="Build Response Payload in JSON format" media-type="json">
                <format>{ "LookupCity": {"Zip": $1}}</format>
                <args>
                    <arg xmlns:tem="http://tempuri.org" evaluator="xml" expression="//tem:LookupCity/tem:Zip"/>
                </args>
            </payloadFactory>
            <send description="Send Request Payload to SOAP endpoint">
                <endpoint key="EP_JSONEndpoint"/>
            </send>
        </inSequence>
        <outSequence>
            <payloadFactory description="Build SOAP request payload" media-type="xml">
                <format>
                    <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                        <soapenv:Body>
                            <LookupCityResult xmlns="http://tempuri.org">
                                <LookupCity>
                                    <City>$1</City>
                                    <State>$2</State>
                                    <Zip>$3</Zip>
                                </LookupCity>
                            </LookupCityResult>
                        </soapenv:Body>
                    </soapenv:Envelope>
                </format>
                <args>
                    <arg evaluator="json" expression="$.LookupCityResult.City"/>
                    <arg evaluator="json" expression="$.LookupCityResult.State"/>
                    <arg evaluator="json" expression="$.LookupCityResult.Zip"/>
                </args>
            </payloadFactory>
            <respond description="Respond to client"/>
        </outSequence>
        <faultSequence>
            <makefault version="soap11">
                <code xmlns:soap11Env="http://schemas.xmlsoap.org/soap/envelope/"
                      expression="get-property('ERROR_CODE')"/>
                <reason expression="get-property('ERROR_MESSAGE')"/>
            </makefault>
            <log level="full">
                <property name="FAULT_HIT" value="Fault sequence hit..."/>
            </log>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
            <respond/>
        </faultSequence>
    </resource>
</api>
