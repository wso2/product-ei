<sequence name="14_1_1_Seq_TaskWithInterval" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
    <call>
        <endpoint>
            <http method="post" uri-template="http://ei-backend.scenarios.wso2.org:9090/eiTests/invocationCount/${invocation.uuid}-interval"/>
        </endpoint>
    </call>
    <log level="custom">
        <property expression="json-eval($.invocationCount)"
                  name="number of invocations for ${invocation.uuid}-interval"/>
    </log>
    <drop/>
</sequence>
