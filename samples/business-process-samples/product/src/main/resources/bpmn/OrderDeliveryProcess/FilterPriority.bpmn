      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow6" id="BPMNEdge_flow6">
        <omgdi:waypoint x="475.0" y="270.0"></omgdi:waypoint>
        <omgdi:waypoint x="520.0" y="270.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
