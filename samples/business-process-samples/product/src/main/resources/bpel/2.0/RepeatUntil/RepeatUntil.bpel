<!-- RepeatUntil BPEL Process represents how <repeatUntil/> works -->
<bpel:process name="RepeatUntil"
         targetNamespace="http://wso2.org/bps/samples/RepeatUntil"
         suppressJoinFailure="yes"
         xmlns:tns="http://wso2.org/bps/samples/RepeatUntil"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://www.w3.org/2001/XMLSchema">

    <!-- Import the client WSDL -->
	<bpel:import location="RepeatUntilArtifacts.wsdl" namespace="http://wso2.org/bps/samples/RepeatUntil" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:RepeatUntil"
                     myRole="RepeatUntilProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:RepeatUntilRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:RepeatUntilResponseMessage"/>
        <bpel:variable name="counter" type="ns1:string"></bpel:variable>
        <bpel:variable name="temp" type="ns1:string"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in RepeatUntil.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:RepeatUntil"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:sequence name="Sequence">
            <bpel:assign validate="no" name="InitCounter">
                <bpel:copy>
                    <bpel:from>
                        <bpel:literal xml:space="preserve">0</bpel:literal>
                    </bpel:from>
                    <bpel:to variable="counter"></bpel:to>
                </bpel:copy>
                
            </bpel:assign>
            <bpel:repeatUntil name="RepeatUntil">
                <bpel:assign validate="no" name="IncrementCounter">
                    <bpel:copy>
                        <bpel:from>
                            <![CDATA[$counter + 1]]>
                        </bpel:from>
                        <bpel:to variable="counter"></bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:condition><![CDATA[$counter >= 10]]></bpel:condition>
            </bpel:repeatUntil>
            <bpel:assign validate="no" name="AssignOutput">
                <bpel:copy>
                    <bpel:from>
                        <bpel:literal xml:space="preserve"><tns:RepeatUntilResponse xmlns:tns="http://wso2.org/bps/samples/RepeatUntil" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result></tns:result>
</tns:RepeatUntilResponse>
</bpel:literal>
                    </bpel:from>
                    <bpel:to variable="output" part="payload"></bpel:to>
                </bpel:copy>
                <bpel:copy>
                    <bpel:from>
                        <bpel:literal xml:space="preserve">0</bpel:literal>
                    </bpel:from>
                    <bpel:to variable="temp"></bpel:to>
                </bpel:copy>
                <bpel:copy>
                    <bpel:from part="payload" variable="input">
                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                            <![CDATA[tns:input]]>
                        </bpel:query>
                    </bpel:from>
                    <bpel:to variable="temp"></bpel:to>
                </bpel:copy>
                <bpel:copy>
                    <bpel:from>
                        <![CDATA[$counter + $temp]]>
                    </bpel:from>
                    <bpel:to part="payload" variable="output">
                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                    </bpel:to>
                </bpel:copy>
            </bpel:assign>
        </bpel:sequence>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:RepeatUntil"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

