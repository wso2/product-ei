<template xmlns="http://ws.apache.org/ns/synapse" name="send_template">

    <!--Essential inputs from the user for AS2 exchange-->

    <!--From the deal with the trading partner-->
    <parameter name="as2-to"/>
    <parameter name="as2-from"/>
    <parameter name="key-store-name"/>
    <parameter name="private-key"/>
    <parameter name="public-cert"/>
    <parameter name="cert-list"/>
    <parameter name="subject"/>

    <!--
        Host: set by the endpoint.
        User-Agent: hard coded, WSO2-EI
        Date: date and time generated
        From: & Disposition-Notification-To: hard coded, no use of taking from the user, wso2ei@wso2.com
        as2-version: 1.1, hard coded
        mime-version: 1.0
    -->

    <sequence>
        <class name="org.wso2.ei.connector.as2.AS2Connector"/>
    </sequence>

</template>