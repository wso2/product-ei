<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <api name="Test" context="/test">
        <resource methods="GET" uri-template="/context?queryParam={+query}">
            <inSequence>
                <send>
                    <endpoint>
                        <http method="GET" uri-template="http://localhost:8480/services/queryparamapi/select?queryParam={uri.var.query}"/>
                    </endpoint>
                </send>
            </inSequence>
        </resource>
    </api>
    <api context="/services/queryparamapi" name="ESBJAVA3340Server">
        <resource methods="GET">
            <inSequence>
                <log level="custom">
                    <property expression="fn:substring-after($axis2:REST_URL_POSTFIX,'/select?queryParam=')" name="queryParam"/>
                </log>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </resource>
    </api>
</definitions>