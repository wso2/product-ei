<api xmlns="http://ws.apache.org/ns/synapse"
     name="testEmptyBodyResponseInBlockingModeApi"
     context="/testEmptyBodyResponseInBlockingModeApi">
    <resource methods="POST" url-mapping="/testHttpOk">
        <inSequence>
            <property name="ContentType" scope="axis2" action="remove"/>
            <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN"/>
            <property name="HTTP_SC" value="200" scope="axis2" type="STRING" description="Set HTTP_HC 200"/>
            <respond/>
        </inSequence>
    </resource>
    <resource methods="POST" url-mapping="/testHttpCreated">
        <inSequence>
            <property name="ContentType" scope="axis2" action="remove"/>
            <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN"/>
            <property name="HTTP_SC" value="201" scope="axis2" type="STRING" description="Set HTTP_HC 201"/>
            <respond/>
        </inSequence>
    </resource>
    <resource methods="POST" url-mapping="/testHttpAccepted">
        <inSequence>
            <property name="ContentType" scope="axis2" action="remove"/>
            <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN"/>
            <property name="HTTP_SC" value="202" scope="axis2" type="STRING" description="Set HTTP_HC 202"/>
            <respond/>
        </inSequence>
    </resource>
</api>
