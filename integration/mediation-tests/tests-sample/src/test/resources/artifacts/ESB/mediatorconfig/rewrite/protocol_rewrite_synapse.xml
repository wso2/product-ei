<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="urlRewriteProxy" transports="https http" startOnLoad="true" trace="disable">
        <description/>
        <target>
            <inSequence>
                <log level="full"/>
                <rewrite>
                    <rewriterule>
                        <action value="http" regex="\w.*" type="replace" fragment="protocol"/>
                    </rewriterule>
                </rewrite>
                <log level="full"/>
                <send/>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>
</definitions>