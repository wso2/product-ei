<!-- Introduction to Payload-factory mediator  -->
<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="main">
        <in>
            <log level="full"/>
            <!-- using payloadFactory mediator to transform the request message -->
            <payloadFactory>
                <format>
                    <m:getQuote xmlns:m="http://services.samples">
                        <m:request>
                            <m:symbol>$1</m:symbol>
                        </m:request>
                    </m:getQuote>
                </format>
                <args>
                    <arg xmlns:m0="http://services.samples" expression="//m0:Code/text()"/>
                </args>
            </payloadFactory>
            <log level="full"/>
        </in>

        <out>

        </out>
        <send/>
    </sequence>
    <proxy name="checkSpecialChars" transports="http,https">
        <target>
            <inSequence>
                <log level="full"/>
                <payloadFactory>
                    <format>
                        <m:getQuote xmlns:m="http://services.samples">
                            <m:request>
                                <m:symbol>$1</m:symbol>
                            </m:request>
                        </m:getQuote>
                    </format>
                    <args>
                        <arg xmlns:m0="http://services.samples" expression="//m0:getQuote/m0:request/m0:Code"/>
                    </args>
                </payloadFactory>
                <log level="full"/>
                <send>
                    <endpoint>
                        <address uri="http://localhost:9000/services/SimpleStockQuoteService" />
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>
</definitions>
