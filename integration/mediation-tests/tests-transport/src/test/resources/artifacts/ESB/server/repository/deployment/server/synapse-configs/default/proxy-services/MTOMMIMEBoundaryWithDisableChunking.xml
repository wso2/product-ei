<proxy xmlns="http://ws.apache.org/ns/synapse" name="MTOMMIMEBoundaryWithDisableChunking"
       startOnLoad="true"
       trace="disable" transports="http https">
    <description/>
    <target>
        <inSequence>
            <property name="enableMTOM" scope="axis2" value="true"/>
            <property name="messageType" scope="axis2" type="STRING" value="multipart/related"/>
            <property name="FORCE_HTTP_1.0" value="true" scope="axis2"/>
            <property name="DISABLE_CHUNKING" value="true" scope="axis2" type="STRING"/>
            <send>
                <endpoint>
                    <address optimize="mtom" uri="http://localhost:8480/services/respondBE"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
</proxy>