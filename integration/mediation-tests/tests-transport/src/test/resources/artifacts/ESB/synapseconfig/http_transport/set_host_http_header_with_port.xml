<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="HttpHostHeaderSetProxyWithPort">
        <target>
            <inSequence>
                <log level="custom">
                    <property name="request_host" value="safse"/>
                </log>
                <property name="REQUEST_HOST_HEADER" value="www.sample.com:999" scope="axis2"/>
                <send>
                    <endpoint>
                        <address uri="http://localhost:8480/services/HttpHostHeaderTestProxyWithPort"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <log level="full"/>
                <send/>
            </outSequence>
        </target>
    </proxy>
    <proxy name="HttpHostHeaderTestProxyWithPort">
        <target>
            <inSequence>
                <log level="custom">
                    <property name="request_host" expression="$trp:Host"/>
                </log>
                <filter source="$trp:Host" regex="www.sample.com:999">
                    <then>
                        <send>
                            <endpoint>
                                <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
                            </endpoint>
                        </send>
                    </then>
                    <else>
                        <log level="custom">
                            <property name="ERROR" value="At least one of the filters didn't match"/>
                        </log>
                        <drop/>
                    </else>
                </filter>
            </inSequence>
            <outSequence>
                <header name="To" action="remove"/>
                <send/>
            </outSequence>
        </target>
    </proxy>
</definitions>
