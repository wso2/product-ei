<sequence xmlns="http://ws.apache.org/ns/synapse"
          name="makeCallWithDeleteSequence">
    <log level="full"/>
    <payloadFactory media-type="json">
        <format>{"Request" : {"Message":"This is request message to test HTTP DELETE"}}</format>
    </payloadFactory>
    <log level="full"/>
    <property name="HTTP_METHOD" scope="axis2" type="STRING" value="DELETE"/>
    <call>
        <endpoint>
            <address uri="http://localhost:8480/HTTPDeleteTestAPI"/>
        </endpoint>
    </call>
    <log level="full"/>
    <respond/>
</sequence>
