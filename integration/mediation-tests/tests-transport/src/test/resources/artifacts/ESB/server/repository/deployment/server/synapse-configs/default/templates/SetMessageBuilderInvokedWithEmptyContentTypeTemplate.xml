<template xmlns="http://ws.apache.org/ns/synapse" name="SetMessageBuilderInvokedWithEmptyContentTypeTemplate">
    <sequence>
        <log level="full">
            <property name="state" value="Before Enrich"/>
        </log>
        <enrich>
            <source clone="true" property="ORIGINAL_PAYLOAD" type="property"/>
            <target type="body"/>
        </enrich>
        <log level="full">
            <property name="state" value="After Enrich"/>
        </log>
        <script language="js"><![CDATA[var attempts = 1;
                    var intAttempts = 0;
                    if(attempts != null || attempts != ""){
                    intAttempts = parseInt(attempts);
                    }
                    intAttempts = intAttempts+1;
                    mc.setProperty("REDELIVERY_ATTEMPTS",intAttempts);]]></script>
        <log level="full">
            <property name="state" value="After Script"/>
        </log>
        <property name="messageType" scope="axis2" value="application/json"/>
        <log level="full">
            <property name="state" value="Before calling store seq"/>
        </log>
        <log level="full">
            <property name="state" value="End of sequence"/>
            <property expression="get-property('axis2','message.builder.invoked')" name="messageBuilderInvokedValue"/>
        </log>
        <respond/>
    </sequence>
</template>