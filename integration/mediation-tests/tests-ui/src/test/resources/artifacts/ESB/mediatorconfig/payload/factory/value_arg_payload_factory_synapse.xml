<!-- Introduction to Payload-factory mediator  -->
<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="main">
        <in>
            <log level="full"/>
            <!-- using payloadFactory mediator to transform the request message -->
            <payloadFactory>
                <format>
                    <m:getQuote xmlns:m="http://services.samples">
                        <m:request>
                            <m:symbol>$1</m:symbol>
                        </m:request>
                    </m:getQuote>
                </format>
                <args>
                    <arg value="WSO2"/>
                </args>
            </payloadFactory>
            <log level="full"/>
        </in>

        <out>

        </out>
        <send/>
    </sequence>

</definitions>