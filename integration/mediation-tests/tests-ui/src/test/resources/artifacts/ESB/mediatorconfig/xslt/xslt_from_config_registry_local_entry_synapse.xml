<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>

    <endpoint name="StockQuoteService">
        <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
    </endpoint>
    <sequence name="xsltMediatorSequence" onError="fault">
        <in>
            <log level="custom">
                <property name="text" value="---------Request Message------------"/>
            </log>
            <log level="full"/>
            <xslt key="conf:/xslt/transform.xslt"/>
            <log level="custom">
                <property name="text" value="---------Transformed Request Message------------"/>
            </log>
            <log level="full"/>
            <send>
                <endpoint key="StockQuoteService"/>
            </send>
        </in>
        <out>
            <log level="custom">
                <property name="text" value="---------Response Message------------"/>
            </log>
            <log level="full"/>
            <xslt key="conf:/xslt/transform_back.xslt"/>
            <log level="custom">
                <property name="text" value="---------Transformed Response Message------------"/>
            </log>
            <log level="full"/>
            <send/>
        </out>
    </sequence>

    <sequence name="fault">
        <makefault>
            <code xmlns:tns="http://schemas.xmlsoap.org/soap/envelope/" value="tns:Server"/>
            <reason xmlns:ns3="http://org.apache.synapse/xsd"
                    expression="get-property('ERROR_MESSAGE')"/>
        </makefault>
        <header name="To" expression="get-property('ReplyTo')"/>
        <send/>
    </sequence>
    <sequence name="main">
        <sequence key="xsltMediatorSequence"/>
    </sequence>
</definitions>