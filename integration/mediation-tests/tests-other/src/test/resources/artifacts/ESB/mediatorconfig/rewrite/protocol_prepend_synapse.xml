<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="urlRewriteProxy" transports="https,http" statistics="disable" trace="disable"
           startOnLoad="true">
        <target>
            <inSequence>
                <property name="protocol.prepend" value="ht" scope="default"/>
                <log level="full"/>
                <rewrite>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="tp"/>
                        </condition>
                        <action xpath="get-property('protocol.prepend')" type="prepend"
                                fragment="protocol"/>
                    </rewriterule>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="ttp"/>
                        </condition>
                        <action value="h" type="prepend" fragment="protocol"/>
                    </rewriterule>
                </rewrite>
                <log level="full"/>
                <send/>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <description></description>
    </proxy>

</definitions>