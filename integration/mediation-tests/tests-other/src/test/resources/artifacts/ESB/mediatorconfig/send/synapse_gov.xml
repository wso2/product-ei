<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>
    <proxy name="testSequenceAtGovRegistryBuildMessage">
        <target>
            <inSequence>
                <send receive="gov:/sequence_conf/test_sequence_build_message_gov.xml" buildmessage="true">
                    <endpoint key ="conf:/endpoints/registry_endpoint.xml"/>
                </send>
            </inSequence>
            <outSequence>
                <drop/>
            </outSequence>
        </target>
    </proxy>
    <proxy name="testSequenceAtGovRegistryBuildMessageNo">
        <target>
            <inSequence>
                <send receive="gov:/sequence_conf/test_sequence_build_message_gov.xml" buildmessage="false">
                    <endpoint key ="conf:/endpoints/registry_endpoint.xml"/>
                </send>
            </inSequence>
            <outSequence>
                <drop/>
            </outSequence>
        </target>
    </proxy>
</definitions>
