<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="LocalEntryTestProxy" transports="https http" startOnLoad="true" trace="disable">
        <description/>
        <target>
            <inSequence>
                <property name="uri.var.endpoint" expression="get-property('stockQuoteEndpointKey')"/>
                <log level="custom">
                    <property name="EndPoint" expression="get-property('uri.var.endpoint')"/>
                </log>
                <send>
                    <endpoint>
                        <http method="post" uri-template="{uri.var.endpoint}/SimpleStockQuoteService"/>
                    </endpoint>
                </send>
            </inSequence>
        </target>
    </proxy>
    <localEntry key="stockQuoteEndpointKey">http://localhost:9000/services<description/>
    </localEntry>
    <sequence name="fault">
        <log level="full">
            <property name="MESSAGE" value="Executing default &quot;fault&quot; sequence"/>
            <property name="ERROR_CODE" expression="get-property('ERROR_CODE')"/>
            <property name="ERROR_MESSAGE" expression="get-property('ERROR_MESSAGE')"/>
        </log>
        <drop/>
    </sequence>
    <sequence name="main">
        <log/>
        <drop/>
    </sequence>
</definitions>