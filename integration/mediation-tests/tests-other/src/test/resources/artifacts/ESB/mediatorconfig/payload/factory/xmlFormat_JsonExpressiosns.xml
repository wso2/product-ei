<!-- Introduction to Payload-factory mediator  -->
<definitions xmlns="http://ws.apache.org/ns/synapse">

	<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="Dummy"
       transports="https http"
       startOnLoad="true"
       trace="disable">
   <description/>
   <target>
      <inSequence>
         <header name="To" action="remove"/>
         <property name="RESPONSE" value="true"/>
         
         <payloadFactory media-type="xml">
            <format>
                <xml>
                    <coordinates/>
                    <created_at>Fri Jun 24 17:43:26 +0000 2011</created_at>
                    <truncated>false</truncated>
                    <favorited>false</favorited>
                    <id_str>$1</id_str>
                    <entities>
                        <hashtags>
                            <text>$2</text>
                            <indices>35</indices>
                            <indices>45</indices>
                        </hashtags>
                    </entities>
                    <in_reply_to_user_id_str/>
                    <contributors/>
                    <text>##</text>
                    <retweet_count>0</retweet_count>
                    <id>$3</id>
                    <in_reply_to_status_id_str/>
                    <geo/>
                    <retweeted>false</retweeted>
                    <in_reply_to_user_id/>
                    <source>&amp;lt;a href="http://sites.google.com/site/yorufukurou/" rel="nofollow"&amp;gt;YoruFukurou&amp;lt;/a&amp;gt;</source>
                    <in_reply_to_screen_name/>
                    <user>
                        <id_str>##</id_str>
                        <id>##</id>
                    </user>
                    <place/>
                    <in_reply_to_status_id/>
                </xml>
            </format>
            <args>
                <arg expression="$.entities.hashtags[0].text" evaluator="json"/>
                <arg expression="$.user.id" evaluator="json"/>
                <arg expression="$.user.id_str" evaluator="json"/>
            </args>
         </payloadFactory>
         <property name="messageType" value="application/xml" scope="axis2"/>
         <log level="full"/>
         <send/>
      </inSequence>
      <faultSequence>
      	<log name="fault" level="full"/>
      </faultSequence>
   </target>
</proxy>

    <sequence name="main">
        <in>
            <log level="full"/>
                        
            <send/>
        </in>

        <out>

        </out>
        <send/>
    </sequence>
</definitions>
