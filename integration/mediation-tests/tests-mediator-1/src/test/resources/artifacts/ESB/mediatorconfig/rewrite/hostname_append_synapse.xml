<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy xmlns="http://ws.apache.org/ns/synapse" name="urlRewriteAppendHostNameTestProxy" transports="https,http" statistics="disable" trace="disable"
           startOnLoad="true">
        <target>
            <inSequence>
                <property name="host.name.append" value="host" scope="default"/>
                <log level="full"/>
                <rewrite>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="http"/>
                        </condition>
                        <action value="host" fragment="host" type="append"/>
                    </rewriterule>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="https"/>
                        </condition>
                        <action xpath="get-property('host.name.append')" type="append"
                                fragment="host"/>
                        <action value="http" fragment="protocol" type="set"/>
                    </rewriterule>
                </rewrite>
                <log level="full"/>
                <send/>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <description></description>
    </proxy>

</definitions>