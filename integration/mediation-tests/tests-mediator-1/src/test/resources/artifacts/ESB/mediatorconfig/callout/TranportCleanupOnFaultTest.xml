<!-- Callout  mediator test for transport cleanup for fault-->
<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="main">
        <callout serviceURL="http://localhost:8480/services/MakeFaultProxy"
                 action="urn:mediate">
            <source xmlns:s12="http://www.w3.org/2003/05/soap-envelope"
                    xmlns:s11="http://schemas.xmlsoap.org/soap/envelope/"
                    xpath="s11:Body/child::*[fn:position()=1] | s12:Body/child::*[fn:position()=1]"/>
            <target xmlns:s12="http://www.w3.org/2003/05/soap-envelope"
                    xmlns:s11="http://schemas.xmlsoap.org/soap/envelope/"
                    xpath="s11:Body/child::*[fn:position()=1] | s12:Body/child::*[fn:position()=1]"/>
        </callout>
        <property name="RESPONSE" value="true" scope="default" type="STRING"/>
        <header name="To" action="remove"/>
        <send/>
        <drop/>
    </sequence>


    <sequence name="fault">
         <property name="RESPONSE" value="true" scope="default" type="STRING"/>
         <header name="To" action="remove"/>
         <makefault version="soap11">
            <code xmlns:soap11Env="http://schemas.xmlsoap.org/soap/envelope/"
                  value="soap11Env:Server"/>
            <reason expression="get-property('ERROR_MESSAGE')"/>
            <role/>
            <detail expression="get-property('ERROR_DETAIL')"/>
         </makefault>
         <send/>
    </sequence>

    <proxy name="MakeFaultProxy"
           transports="https http"
           startOnLoad="true"
           trace="disable">
       <description/>
       <target>
          <inSequence>
             <switch source="//m0:getQuote/m0:request/m0:symbol" xmlns:m0="http://services.samples">
                <case regex="IBM">
                   <send>
                      <endpoint>
                         <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
                      </endpoint>
                   </send>
                </case>
                 <case regex="SUN">
                     <makefault version="soap11">
                         <code value="tns:Receiver" xmlns:tns="http://www.w3.org/2003/05/soap-envelope"/>
                         <reason value="Invalid Symbol..!"/>
                     </makefault>
                     <property name="RESPONSE" value="true" scope="default" type="STRING"/>
                     <header name="To" action="remove"/>
                     <send/>
                </case>
             </switch>
          </inSequence>
          <outSequence>
             <send/>
          </outSequence>
       </target>
    </proxy>

</definitions>
