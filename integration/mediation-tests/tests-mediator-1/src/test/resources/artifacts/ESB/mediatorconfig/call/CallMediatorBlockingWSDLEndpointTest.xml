<!-- call mediator blocking calls with WSDL endpoint-->
<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="main">

        <header name="Action" value="urn:getQuote"/>
        <payloadFactory>
            <format>
                <m0:getQuote xmlns:m0="http://services.samples">
                    <m0:request>
                        <m0:symbol>WSO2</m0:symbol>
                    </m0:request>
                </m0:getQuote>
            </format>
            <args/>
        </payloadFactory>
        <call blocking="true">
            <endpoint>
                <wsdl service="SimpleStockQuoteService"
                      port="SimpleStockQuoteServiceHttpSoap11Endpoint"  uri="file:samples/service-bus/resources/proxy/sample_proxy_1.wsdl"/>
            </endpoint>
        </call>
        <property name="RESPONSE" value="true"/>
        <header name="To" action="remove"/>
        <send/>
        <drop/>
    </sequence>

</definitions>
