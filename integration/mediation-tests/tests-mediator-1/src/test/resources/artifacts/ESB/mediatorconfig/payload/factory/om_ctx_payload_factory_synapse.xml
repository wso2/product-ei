<!-- Introduction to Payload-factory mediator  -->
<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="main">
        <in>
            <log level="full"/>
            <!-- using payloadFactory mediator to transform the request message -->
            <header name="To" action="remove"/>
            <property name="RESPONSE" value="true"/>
            <property name="NO_ENTITY_BODY" scope="axis2" action="remove"/>
            <property xmlns:ns="http://services.samples" name="request" expression="//ns:payload/ns:request" scope="default" type="OM"/>
            <payloadFactory>
                <format>
                    <ns:getQuote xmlns:ns="http://services.samples">$ctx:request</ns:getQuote>
                </format>
            </payloadFactory>
            <log level="full"/>
            <send/>
        </in>

        <out>

        </out>
    </sequence>

</definitions>
