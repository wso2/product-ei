<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="urlRewriteAppendFullUriTestProxy" transports="https,http" statistics="disable" trace="disable" startOnLoad="true">
       <target>
          <inSequence>
             <property name="url.append" value="http://localhost:9000/services/SimpleStockQuoteService" scope="default" />
              <log level="full" />
             <rewrite>
                <rewriterule>
                   <condition>
                      <equal xmlns="" type="url" source="protocol" value="http" />
                   </condition>
                   <action value="http://localhost:9000/services/SimpleStockQuoteService" type="append" fragment="full" />
                </rewriterule>
                <rewriterule>
                   <condition>
                      <equal xmlns="" type="url" source="protocol" value="https" />
                   </condition>
                   <action xpath="get-property('url.append')" type="append" fragment="full" />
                </rewriterule>
             </rewrite>
             <log level="full" />
             <send />
          </inSequence>
          <outSequence>
             <send />
          </outSequence>
       </target>
       <description></description>
    </proxy>

</definitions>