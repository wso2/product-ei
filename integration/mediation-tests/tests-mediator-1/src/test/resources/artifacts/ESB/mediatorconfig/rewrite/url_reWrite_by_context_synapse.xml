<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy xmlns="http://ws.apache.org/ns/synapse" name="urlRewriteByUrlContextTestProxy" transports="https,http" statistics="disable" trace="disable"
           startOnLoad="true">
        <target>
            <inSequence>
                <property name="path.value" value="services" scope="default"/>
                <log level="full"/>
                <rewrite>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="https"/>
                        </condition>
                        <action value="services" regex="soap" type="replace" fragment="path"/>
                        <action value="http" fragment="protocol" type="set"/>
                    </rewriterule>
                    <rewriterule>
                        <condition>
                            <equal xmlns="" type="url" source="protocol" value="http"/>
                        </condition>
                        <action xpath="get-property('path.value')" regex="soap" type="replace"
                                fragment="path"/>
                    </rewriterule>
                </rewrite>
                <log level="full"/>
                <send/>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <description></description>
    </proxy>

</definitions>