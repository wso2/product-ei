<proxy xmlns="http://ws.apache.org/ns/synapse" name="validateMediatorWithoutNameSpaceTestProxy" transports="https http"
       startOnLoad="true"
       trace="disable">
    <description/>
    <target>
        <inSequence>
            <validate>
                <schema key="validateSchemaWithoutNameSpace"/>
                <on-fail>
                    <!-- if the request does not validate againt schema throw a fault -->
                    <makefault response="true">
                        <code xmlns:tns="http://schemas.xmlsoap.org/soap/envelope/" value="tns:Server"/>
                        <reason value="Invalid custom quote request"/>
                    </makefault>
                </on-fail>
            </validate>
            <send/>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
</proxy>
