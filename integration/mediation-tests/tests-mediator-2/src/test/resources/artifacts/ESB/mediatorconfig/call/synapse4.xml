<!--

Call Mediator placed within Filter mediator

Console Log
===========
STATE = INSEQ S1
STATE = SEQ1 S1
STATE = SEQ1 F1 S1
STATE = SEQ1 F1 S2
STATE = SEQ1 S2
STATE = INSEQ S2
-->

<definitions xmlns="http://ws.apache.org/ns/synapse">

    <proxy name="TestCallProxy"
           transports="https http"
           startOnLoad="true"
           trace="disable">
        <description/>
        <target>
            <inSequence>
                <log level="custom">
                    <property name="STATE" value="INSEQ S1"/>
                </log>
                <sequence key="SEQ1"/>
                <log level="custom">
                    <property name="STATE" value="INSEQ S2"/>
                </log>
                <header name="To" action="remove"/>
                <property name="RESPONSE" value="true"/>
                <send/>
            </inSequence>
        </target>
    </proxy>

    <endpoint name="EP">
        <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
    </endpoint>

    <sequence name="SEQ1">
        <log level="custom">
            <property name="STATE" value="SEQ1 S1 "/>
        </log>
        <filter xmlns:ns="http://org.apache.synapse/xsd"
                xmlns:m0="http://services.samples"
                xpath="//m0:request">
            <then>
                <log level="custom">
                    <property name="STATE" value="SEQ1 F1 S1"/>
                </log>
                <call>
                    <endpoint key="EP"/>
                </call>
                <log level="custom">
                    <property name="STATE" value="SEQ1 F1 S2"/>
                </log>
            </then>
            <else/>
        </filter>
        <log level="custom">
            <property name="STATE" value="SEQ1 S2"/>
        </log>
    </sequence>

</definitions>
