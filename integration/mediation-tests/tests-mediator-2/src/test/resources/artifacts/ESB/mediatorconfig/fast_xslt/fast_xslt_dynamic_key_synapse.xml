<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>
    <localEntry key="response_transform.xslt">
        <xsl:stylesheet version="2.0"
                        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                        xmlns:fn="http://www.w3.org/2005/02/xpath-functions"
                        xmlns:m0="http://services.samples"
                        xmlns:ax21="http://services.samples/xsd"
                        exclude-result-prefixes="m0 ax21 fn">
            <xsl:output method="xml" omit-xml-declaration="yes" indent="yes"/>

		    <xsl:template match="@* | node()">
		       <xsl:copy>
		          <xsl:apply-templates select="@* | node()"/>
		       </xsl:copy>
		    </xsl:template>
		
		    <xsl:template match="m0:getQuoteResponse">
		
		        <m:CheckPriceResponse xmlns:m="http://services.samples/xsd">
		            <m:Code>
		                <xsl:value-of select="m0:return/ax21:symbol"/>
		            </m:Code>
		            <m:Price>
		                <xsl:value-of select="m0:return/ax21:last"/>
		            </m:Price>
		        </m:CheckPriceResponse>
		
		    </xsl:template>

        </xsl:stylesheet>
    </localEntry>
    <localEntry key="request_transform.xslt">
        <xsl:stylesheet version="2.0"
                        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                        xmlns:fn="http://www.w3.org/2005/02/xpath-functions"
                        xmlns:m0="http://services.samples"
                        exclude-result-prefixes="m0 fn">
            <xsl:output method="xml" omit-xml-declaration="yes" indent="yes"/>

	        <xsl:template match="@* | node()">
	           <xsl:copy>
	              <xsl:apply-templates select="@* | node()"/>
	           </xsl:copy>
	        </xsl:template>

            <xsl:template match="m0:CheckPriceRequest">

                <m:getQuote xmlns:m="http://services.samples">
                    <m:request>
                        <m:symbol>
                            <xsl:value-of select="m0:Code"/>
                        </m:symbol>
                    </m:request>
                </m:getQuote>

            </xsl:template>
        </xsl:stylesheet>
    </localEntry>
    <sequence name="fastXSLTMediatorSequence" onError="fault">
        <in>
            <fastXSLT xmlns:soapenv="http://www.w3.org/2003/05/soap-envelope"
                      xmlns:ns="http://org.apache.synapse/xsd"
                      key="{get-property('registry','conf:localEntries/request_transformation.txt/@resourceName')}"/>
            <send>
                <endpoint>
                    <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
                </endpoint>
            </send>
        </in>
        <out>
            <fastXSLT xmlns:soapenv="http://www.w3.org/2003/05/soap-envelope"
                      xmlns:ns="http://org.apache.synapse/xsd"
                      key="{get-property('registry','gov:localEntries/response_transformation_back.txt/@resourceName')}"/>
            <send/>
        </out>
    </sequence>

    <sequence name="fault">
        <makefault>
            <code xmlns:tns="http://schemas.xmlsoap.org/soap/envelope/" value="tns:Server"/>
            <reason xmlns:ns3="http://org.apache.synapse/xsd"
                    expression="get-property('ERROR_MESSAGE')"/>
        </makefault>
        <header name="To" expression="get-property('ReplyTo')"/>
        <send/>
    </sequence>
    <sequence name="main">
        <sequence key="fastXSLTMediatorSequence"/>
    </sequence>
</definitions>